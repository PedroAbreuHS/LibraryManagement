@using LibraryManagement.Enums
@using LibraryManagement.Models
@model UsuarioModel;

<nav>

    <div class="nav nav-tabs" id="nav-tab" role="tablist" >
        <button class="nav-link active" id="nav-home-tab" data-bs-toggle="tab" data-bs-target="#nav-home" type="button" role="tab" aria-selected="true" aria-controls="nav-home" > Dados: Gerais </button>
        <button class="nav-link" id="nav-profile-tab" data-bs-toggle="tab" data-bs-target="#nav-profile" type="button" role="tab" aria-selected="true" aria-controls="nav-profile" > Dados: Endereço </button>        
    </div>

</nav>
<div class="tab-content" id="nav-tabContent" >


    <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab" >
        <div class="container mt-5" >
            <form method="post" asp-action="MudarSituacaoUsuario" asp-controller="Usuario" >
                <input type="hidden" asp-for="Id" />

                @if (Model.Perfil != PerfilEnum.Cliente)
                    {
                    <h2> Detalhes do Funcionário: @Model.Usuario </h2>
                }
                else
                {
                    <h2> Detalhes do Cliente: @Model.Usuario </h2>
                }

                <div class="mb-1" >
                    <label> Nome Completo: </label>
                    <input asp-for="NomeCompleto" type="text" class="form-control shadow-none" disabled />
                </div>

                <div class="mb-1">
                    <label> Usuario: </label>
                    <input asp-for="Usuario" type="text" class="form-control shadow-none" disabled />
                </div>

                <div class="mb-1">
                    <label> E-mail: </label>
                    <input asp-for="Email" type="email" class="form-control shadow-none" disabled />
                </div>

                @if (Model.Perfil != PerfilEnum.Cliente)
                    {
                        <div class="mb-1">
                            <label> Perfil: </label>
                            <input asp-for="Perfil" type="text" class="form-control shadow-none" disabled />
                        </div>

                        <div class="mb-1">
                            <label> Turno: </label>
                            <input asp-for="Turno" type="text" class="form-control shadow-none" disabled />
                        </div>
                    }

                <div class="mb-1">
                    <label> Situação: </label>
                    <input value="@(Model.Situacao == true ? "Ativo" : "Inativo")" type="text" class="form-control shadow-none" disabled />
                </div>

                <div class="mb-1">
                    <label> Data de Cadastro: </label>
                    <input asp-for="DataCadastro" type="date" class="form-control shadow-none" disabled />
                </div>

                <div class="mb-1">
                    <label> Data de Alteração: </label>
                    <input asp-for="DataAlteracao" type="date" class="form-control shadow-none" disabled />
                </div>


                <div class="row mt-3">
                    <div class="col-md-6 mb-2">
                        @if (Model.Situacao == false)
                        {
                            <button type="submit" class="btn btn-success w-100">
                                <i class="bi bi-plus"></i> Ativar Usuário
                            </button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-danger w-100">
                                <i class="bi bi-x"></i> Inativar Usuário
                            </button>
                        }
                    </div>
                    <div class="col-md-6 mb-2">
                        @if (Model.Perfil == PerfilEnum.Cliente)
                        {
                            <a asp-action="Index" asp-controller="Cliente" asp-route-id="0" class="btn btn-info w-100">
                                <i class="bi bi-arrow-left-circle"></i> Voltar
                            </a>
                        }
                        else
                        {
                            <a asp-action="Index" asp-controller="Funcionario" class="btn btn-info w-100">
                                <i class="bi bi-arrow-left-circle"></i> Voltar
                            </a>
                        }
                    </div>
                </div>

            </form>
        </div>
    </div>

    <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab" >
        <div class="container mt-5" >

            <form method="post" asp-controller="Usuario" asp-action="MudarSituacaoUsuario" >
                
                <input type="hidden" asp-for="Id" />

                <div class="mb-1" >
                    <label> CEP: </label>
                    <input asp-for="Endereco.CEP" type="" class="form-control shadow-none" disabled />
                </div>

                <div class="mb-1" >
                    <label> Logradouro: </label>
                    <input asp-for="Endereco.Logradouro" type="" class="form-control shadow-none" disabled />
                </div>

                <div class="mb-1" >
                    <label> Número: </label>
                    <input asp-for="Endereco.Numero" type="" class="form-control shadow-none" disabled />
                </div>

                <div class="mb-1" >
                    <label> Bairro: </label>
                    <input asp-for="Endereco.Bairro" type="" class="form-control shadow-none" disabled />
                </div>

                <div class="mb-1" >
                    <label> Cidade: </label>
                    <input asp-for="Endereco.Cidade" type="" class="form-control shadow-none" disabled />
                </div>

                <div class="mb-1" >
                    <label> Estado: </label>
                    <input asp-for="Endereco.Estado" type="" class="form-control shadow-none" disabled />
